{
    "name": "{%= package_name %}",
    "description": "{%= description %}",
    "authors": [
        {
            "name": "{%= author_name %}",
            "email": "{%= author_email %}"
        }
    ],
    "require": {
        "lucatume/tdd-helpers": "~2.0",
        "xrstf/composer-php52": "1.*"
    },
    "scripts": {
        "post-install-cmd": [
            "xrstf\\Composer52\\Generator::onPostInstallCmd"
        ],
        "post-update-cmd": [
            "xrstf\\Composer52\\Generator::onPostInstallCmd"
        ],
        "post-autoload-dump": [
            "xrstf\\Composer52\\Generator::onPostInstallCmd"
        ]
    },
    "autoload": {
        "classmap": ["src/"]
    }
}